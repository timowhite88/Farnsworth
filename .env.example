# Farnsworth Configuration Example
# Copy this to .env and customize

# ============================================
# P2P PLANETARY MEMORY NETWORK
# ============================================
# Connect to the official Farnsworth network
FARNSWORTH_BOOTSTRAP_PEER=ws://194.68.245.145:8889
FARNSWORTH_BOOTSTRAP_PASSWORD=Farnsworth2026!

# Enable planetary memory sharing
ENABLE_PLANETARY_MEMORY=true
PLANETARY_USE_P2P=true

# Your local P2P port (default 9999)
FARNSWORTH_P2P_PORT=9999

# Set to true to disable all P2P networking
FARNSWORTH_ISOLATED=false

# ============================================
# SOLANA / TRADING (Optional)
# ============================================
# Your Solana RPC endpoint
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Wallet private key (base58 encoded) - KEEP SECRET!
# SOLANA_PRIVATE_KEY=your_private_key_here

# ============================================
# LLM BACKENDS (Optional)
# ============================================
# Anthropic API key (for Claude)
# ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key (for GPT models)
# OPENAI_API_KEY=sk-...

# Ollama host (for local models)
OLLAMA_HOST=http://localhost:11434

# Primary model for web interface
FARNSWORTH_PRIMARY_MODEL=deepseek-r1:1.5b

# ============================================
# WEB INTERFACE
# ============================================
# Token required to access web interface
FARNSWORTH_REQUIRED_TOKEN=9crfy4udrHQo8eP6mP393b5qwpGLQgcxVg9acmdwBAGS
FARNSWORTH_MIN_TOKEN_BALANCE=1

# Demo mode (bypasses token verification)
FARNSWORTH_DEMO_MODE=true

# Web server port
FARNSWORTH_WEB_PORT=8080

# ============================================
# DATA STORAGE
# ============================================
# Directory for all Farnsworth data
FARNSWORTH_DATA_DIR=./data
